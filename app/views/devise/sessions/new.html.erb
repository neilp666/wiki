


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>

	<h2>Log in</h2>

    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>


 
   <%= f.button :button, "Sign in", class: "btn btn-success btn btn-block".html_safe, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Signing in..."} %>
  
<% end %>

<%= render "devise/shared/links" %>
